<% layout('/layouts/boilerplate') -%>

<body class="container py-4">
  <h3 class="mb-4 fw-semibold">Edit Your Listing</h3>

  <form
    method="POST"
    action="/listings/<%= listing._id %>?_method=PUT"
    class="w-75"
  >
    <!-- Title -->
    <div class="mb-3">
      <label class="form-label">Title</label>
      <input
        name="listing[title]"
        type="text"
        class="form-control"
        value="<%= listing.title %>"
      />
    </div>

    <!-- Description -->
    <div class="mb-3">
      <label class="form-label">Description</label>
      <textarea name="listing[description]" class="form-control" rows="3">
<%= listing.description %></textarea
      >
    </div>

    <!-- Image -->
    <div class="mb-3">
      <label class="form-label">Image URL</label>
      <input
        name="listing[image][url]"
        type="text"
        class="form-control"
        value="<%= listing.image.url %>"
      />
    </div>

    <!-- Price -->
    <div class="mb-3">
      <label class="form-label">Price</label>
      <input
        name="listing[price]"
        type="number"
        class="form-control"
        value="<%= listing.price %>"
      />
    </div>

    <!-- Country -->
    <div class="mb-3">
      <label class="form-label">Country</label>
      <input
        name="listing[country]"
        type="text"
        class="form-control"
        value="<%= listing.country %>"
      />
    </div>

    <!-- Location -->
    <div class="mb-3">
      <label class="form-label">Location</label>
      <input
        name="listing[location]"
        type="text"
        class="form-control"
        value="<%= listing.location %>"
      />
    </div>

    <!-- Submit Button -->
    <button class="btn btn-primary px-4">Save Changes</button>
  </form>
</body>
