<% layout('/layouts/boilerplate') -%>
<body class="container py-4">
  <br /><br />
  <h3 class="mb-4">Create a New Listing</h3>

  <form method="POST" action="/listings" class="w-75">
    <!-- Title -->
    <div class="mb-3">
      <label class="form-label">Title</label>
      <input
        name="listing[title]"
        type="text"
        placeholder="Enter title"
        class="form-control"
      />
    </div>

    <!-- Description -->
    <div class="mb-3">
      <label class="form-label">Description</label>
      <textarea
        name="listing[description]"
        placeholder="Enter description"
        class="form-control"
        rows="3"
      ></textarea>
    </div>

    <!-- Image -->
    <div class="mb-3">
      <label class="form-label">Image URL</label>
      <input
        name="listing[image][url]"
        type="text"
        placeholder="Enter image URL"
        class="form-control"
      />
    </div>

    <!-- Price -->
    <div class="mb-3">
      <label class="form-label">Price</label>
      <input
        name="listing[price]"
        type="number"
        placeholder="Enter price"
        class="form-control"
      />
    </div>

    <!-- Country -->
    <div class="mb-3">
      <label class="form-label">Country</label>
      <input
        name="listing[country]"
        type="text"
        placeholder="Enter country"
        class="form-control"
      />
    </div>

    <!-- Location -->
    <div class="mb-3">
      <label class="form-label">Location</label>
      <input
        name="listing[location]"
        type="text"
        placeholder="Enter location"
        class="form-control"
      />
    </div>

    <!-- Submit -->
    <button class="btn btn-primary mt-2 add-btn">Add</button>
  </form>
  <br /><br /><br />
  <!-- Bootstrap JS -->
</body>
